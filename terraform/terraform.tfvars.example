# ─────────────────────────────────────────────
# Terraform Variables — EXAMPLE
# ─────────────────────────────────────────────
# Copy this file to terraform.tfvars and fill in your values:
#   cp terraform.tfvars.example terraform.tfvars
#
# NEVER commit terraform.tfvars — it contains secrets.
# ─────────────────────────────────────────────

# Environment
environment  = "dev"
project_name = "airbnb"

# Snowflake Connection (Key-Pair Auth - no password needed)
snowflake_organization_name      = "YOUR_ORG"        # Organization name (first part of account ID)
snowflake_account_name           = "YOUR_ACCOUNT"     # Account name (second part of account ID)
snowflake_user                   = "TF_USER"          # Your Snowflake username
snowflake_role                   = "ACCOUNTADMIN"
snowflake_warehouse              = "COMPUTE_WH"
snowflake_private_key_path       = "../snowflake_key/rsa_key.p8"
snowflake_private_key_passphrase = "YOUR_PASSPHRASE"  # Passphrase from RSA key generation

# Database
database_name   = "AIRBNB_PROJECT"
raw_schema_name = "RAW"

# AWS S3
s3_bucket_name = "YOUR_BUCKET_NAME"
s3_bucket_path = "Booking/"
s3_bucket_url  = "s3://YOUR_BUCKET_NAME/Booking/"
aws_role_arn   = "arn:aws:iam::YOUR_ACCOUNT_ID:role/snowflake-s3-access-role"

# Snowpipe
auto_ingest_enabled = true
file_format_type    = "CSV"
csv_skip_header     = 1
csv_field_delimiter = ","

# Tags
tags = {
  project     = "airbnb-data-pipeline"
  managed_by  = "terraform"
  cost_center = "data-engineering"
}
